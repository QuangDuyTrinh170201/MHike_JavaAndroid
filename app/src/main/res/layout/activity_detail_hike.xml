<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailHikeActivity"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Hike"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hike Name:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtHikeNameEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtLocationEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtDateEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtDescEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leader's Name:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtLeaderNameEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Length of Hike:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/edtLengthEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:background="@drawable/lavender_border"
        android:layout_marginTop="5sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <Spinner
        android:id="@+id/spnParkingEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5sp"/>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty:"
        android:textAlignment="viewStart"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <Spinner
        android:id="@+id/spnDifficultyEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5sp"/>

    <EditText
        android:id="@+id/edtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <Button
            android:id="@+id/btnCancelDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:text="Cancel"
            android:textColor="#808080" />

        <Button
            android:id="@+id/btnDeleteHike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:text="Delete" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="Edit" />

        <Button
            android:id="@+id/btnObservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Obs"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>